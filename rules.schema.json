  "$defs": {
    "text": {
      "description": "Minecraft Java Raw Json Text. Find a generator online",
      "oneOf": [
        {
          "type": "object"
        },
        {
          "type": "string"
        }
      ]
    },
    "described": {
      "description": "Object with text and description",
      "type": "object",
      "required": [
        "text"
      ],
      "properties": {
        "text": {
          "$ref": "#/$defs/text"
        },
        "description": {
          "$ref": "#/$defs/text"
        }
      }
    },
    "rule": {
      "type": "object",
      "title": "Rule",
      "required": [
        "text",
        "controller"
      ],
      "$ref": "#/$defs/described",
      "properties": {
        "text": {
          "$ref": "#/$defs/text"
        },
        "description": {
          "$ref": "#/$defs/text"
        },
        "controller": {
          "type": "object",
          "title": "The controllers",
          "required": [
            "type"
          ],
          "additionalProperties": false,
          "allOf": [
            {
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "label",
                    "boolean",
                    "cycling",
                    "mods_group",
                    "rules_group"
                  ]
                }
              }
            },
            {
              "oneOf": [
                {
                  "properties": {
                    "type": "label"
                  }
                },
                {
                  "properties": {
                    "type": "boolean",
                    "mod": {
                      "type": "string"
                    }
                  }
                },
                {
                  "properties": {
                    "type": "cycling",
                    "mods": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "type": "mods_group",
                    "collapsed": {
                      "description": "Default is false",
                      "type": "boolean",
                      "default": false
                    },
                    "mods": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "show_mods": {
                      "description": "For hiding mods of mod set in the mods",
                      "type": "boolean",
                      "default": true
                    }
                  }
                },
                {
                  "properties": {
                    "type": "rules_group",
                    "collapsed": {
                      "description": "Default is false",
                      "type": "boolean",
                      "default": false
                    },
                    "rules": {
                      "type": "array",
                      "items": {
                        "$ref": "#/$defs/rule"
                      }
                    }
                  }
                }
              ]
            }
          ],
          "examples": [
            {
              "type": "label"
            },
            {
              "type": "boolean",
              "mod": "sodium"
            },
            {
              "type": "cycling",
              "mods": [
                "sodium",
                "optifabric"
              ]
            },
            {
              "type": "mods_group",
              "collapsed": false,
              "mods": [
                "sodium",
                "optifabric"
              ]
            },
            {
              "type": "rules_group",
              "collapsed": true,
              "rules": [
                {
                  "text": "text",
                  "description": "description",
                  "controller": {
                    "type": "label"
                  }
                },
                {
                  "text": "text",
                  "description": "description",
                  "controller": {
