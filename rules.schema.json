{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Rule Set",
  "required": [
    "text",
    "rules"
  ],
  "$ref": "#/$defs/described",
  "properties": {
    "rules": {
      "type": "array",
      "default": [],
      "title": "The rules",
      "items": {
        "$ref": "#/$defs/rule"
      },
      "examples": [
        [
          {
            "text": "The label",
            "description": "Text Text",
            "controller": {
              "type": "label"
            }
          },
          {
            "text": "The boolean",
            "description": "Text Text",
            "controller": {
              "type": "boolean",
              "mod": "sodium"
            }
          },
          {
            "text": "The cycling",
            "description": "Text Text",
            "controller": {
              "type": "cycling",
              "mods": [
                "sodium",
                "optifabric"
              ]
            }
          },
          {
            "text": "The mods group",
            "description": "Text Text",
            "controller": {
              "type": "mods_group",
              "collapsed": false,
              "mods": [
                "sodium",
                "optifabric"
              ]
            }
          },
          {
            "text": "The rules group",
            "description": "Text Text",
            "controller": {
              "type": "rules_group",
              "collapsed": true,
